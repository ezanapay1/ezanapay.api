// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  name       String?
  role       Role       @default(Tenant)
  properties Property[]

  emailVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  Admin
  Tenant
  Landlord
  PropertyManager
}

model Property {
  id              Int    @id @default(autoincrement())
  name            String
  type            String
  numberOfUnits   Int
  location        String
  referenceNumber String
  units           Unit[]
  User            User?  @relation(fields: [userId], references: [id])
  userId          Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("properties")
}

model Unit {
  id            Int      @id @default(autoincrement())
  name          String
  price         Float
  dueDate       DateTime
  rentDue       Float
  rentArrears   Float
  utilities     String
  water         Boolean
  electricity   Boolean
  garbage       Boolean
  serviceCharge Boolean
  taxDeductable Int
  Property      Property @relation(fields: [propertyId], references: [id])
  propertyId    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("units")
}
